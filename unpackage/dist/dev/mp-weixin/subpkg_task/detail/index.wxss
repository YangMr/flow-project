.page-container {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 44px);
}
.search-bar {
  background-color: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.search-bar .icon-scan,
.search-bar .icon-search {
  position: absolute;
  top: 50%;
  left: 40rpx;
  padding: 20rpx;
  font-weight: 600;
  transform: translateY(-50%);
  color: #818181;
  font-size: 32rpx;
}
.search-bar .input {
  height: 64rpx;
  background-color: #f4f4f4;
  border-radius: 64rpx;
  padding-left: 80rpx;
  font-size: 28rpx;
}
.task-detail {
  flex: 1;
  overflow: hidden;
}
.task-detail .scroll-view-wrapper {
  overflow: hidden;
}
.task-detail .panel {
  padding: 30rpx 30rpx 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
  margin: 30rpx;
  box-sizing: border-box;
}
.task-detail .panel-title {
  padding-bottom: 10rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #000000;
}
.task-detail .info-list {
  padding: 20rpx 10rpx 0;
  margin-top: 40rpx;
  border-top: 2rpx solid #f4f4f4;
}
.task-detail .info-list .info-list-item {
  display: flex;
  justify-content: space-between;
  line-height: 1;
  padding: 20rpx 0;
  font-size: 28rpx;
}
.task-detail .info-list .info-list-item .label {
  color: #818181;
}
.task-detail .info-list .info-list-item .value {
  color: #000000;
}
.basic-info .hr {
  border-top: 1rpx solid #f4f4f4;
  margin: 20rpx 0;
}
.basic-info .timeline {
  min-height: 110rpx;
  position: relative;
  padding: 0 140rpx 0 30rpx;
  margin-left: 30rpx;
  border-left: 2rpx dashed #f4f4f4;
}
.basic-info .timeline::before, .basic-info .timeline::after {
  position: absolute;
  left: -24rpx;
  width: 44rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 50%;
  background-color: pink;
}
.basic-info .timeline::before {
  content: "起";
  top: -1rpx;
  background-color: #000000;
}
.basic-info .timeline::after {
  content: "止";
  bottom: -1rpx;
  background-color: #ef4f3f;
}
.basic-info .timeline .line {
  font-size: 28rpx;
  color: #818181;
  margin-top: 30rpx;
}
.basic-info .timeline .line:first-child {
  margin-top: 0;
}
.basic-info .timeline .guide {
  position: absolute;
  right: 0;
  top: 50%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  font-size: 24rpx;
  transform: translateY(-50%);
}
.basic-info .timeline .guide .iconfont {
  margin-bottom: 10rpx;
  font-size: 40rpx;
}
.toolbar {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx calc(env(safe-area-inset-bottom) + 30rpx);
  font-size: 32rpx;
  background-color: #fff;
}
.toolbar .button {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 100rpx;
  font-size: 36rpx;
}
.toolbar .secondary {
  width: 250rpx;
  color: #000000;
  background-color: #e6e6e6;
}
.toolbar .primary {
  width: 400rpx;
  color: #fff;
  background-color: #ef4f3f;
}
.toolbar .primary.block {
  width: 690rpx;
}
.toolbar .primary[disabled] {
  background-color: #fadcd9;
}